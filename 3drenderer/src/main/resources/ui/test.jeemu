body {
  div {
    ID: "hud";
    width: 100%;
    height: 100%;
    color: expr(rgba(255, 255, 255, 255));
    //backgroundColor: expr(rgba(255,0,0,128));
    
    div {
      ID: "crosshair";
      left: 50%;
      top: 50%;
      width: 4px;
      height: 4px;
      anchorX: 50%;
      anchorY: 50%;
      backgroundColor: expr(rgba(0,0,0,255));

      @responsive { 
        @window 400x400 { 
          width: 64px; 
          height: 64px; 
        } 
        @ratio 1:1 {
          width: 128px;
          height: 128px;
        }
      }
    }

    text {
      
    }
    
    @responsive {
      @window 800x400 {
        backgroundColor: expr(rgba(0,255,0,128));
      }
    }
  }
}
