body {
  div {
    ID: "hud";
    width: 100%;
    height: 100%;
    primaryColor: expr(rgba(255, 255, 255, 255));
    secondaryColor: expr(rgba(255,0,0,0));
    
    div {
      ID: "crosshair";
      left: 50%;
      top: 50%;
      width: 16px;
      height: 16px;
      anchorX: 50%;
      anchorY: 50%;
      secondaryColor: expr(rgba(0,0,0,255));
    }

    text {
      Hello world
    }
  }
}
